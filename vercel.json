{
    "version": 2,
    "builds": [
        {
            "src": "api/proxy.py",
            "use": "@vercel/python",
            "maxDuration": 60,
            "memory": 1024
        }
    ],
    "routes": [
        { "src": "/public/(.*)", "dest": "/public/$1" },
        { "src": "/api/proxy", "dest": "/api/proxy.py" },
        { "src": "/(.*)", "dest": "index.html" }
    ]
}
